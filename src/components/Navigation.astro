<nav class="fixed top-0 left-0 right-0 z-50 bg-surface/80 backdrop-blur-md border-b border-border shadow-header">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <img src="/reciplab_logo_1.png" data-i18n="brand.logoAlt" data-i18n-attr="alt" class="h-10 w-auto transform group-hover:scale-110 transition-transform duration-300" />
        <span class="text-xl font-bold bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">RecipLab</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="#features" class="text-neutral-700 hover:text-primary-600 transition-colors duration-300 font-medium" data-i18n="nav.features">Features</a>
        <a href="#plans" class="text-neutral-700 hover:text-primary-600 transition-colors duration-300 font-medium" data-i18n="nav.plans">Plans</a>
        <a href="#cta" class="px-6 py-2.5 bg-gradient-to-r from-primary-500 to-primary-600 text-white rounded-full font-semibold hover:shadow-card hover:scale-105 transition-all duration-300" data-i18n="nav.getStarted">Get Started</a>
        <div class="flex items-center space-x-2 bg-white/60 border border-border rounded-full px-3 py-1">
          <span class="text-sm font-medium text-neutral-700 hidden lg:inline" data-i18n="nav.language">Language</span>
          <label class="sr-only" for="language-selector" data-i18n="nav.language">Language</label>
          <select id="language-selector" class="bg-transparent text-neutral-800 text-sm font-semibold focus:outline-none">
            <option value="en" data-i18n="nav.language.en">English</option>
            <option value="es" data-i18n="nav.language.es">Español</option>
          </select>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-muted transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border bg-surface">
    <div class="px-4 py-4 space-y-3">
      <a href="#features" class="block px-4 py-2 text-neutral-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors" data-i18n="nav.features">Features</a>
      <a href="#plans" class="block px-4 py-2 text-neutral-700 hover:bg-primary-50 hover:text-primary-600 rounded-lg transition-colors" data-i18n="nav.plans">Plans</a>
      <a href="#cta" class="block px-4 py-2 bg-gradient-to-r from-primary-500 to-primary-600 text-white text-center rounded-lg font-semibold" data-i18n="nav.getStarted">Get Started</a>
      <div class="flex items-center justify-between px-4 py-2 bg-surface rounded-lg border border-border">
        <label for="language-selector-mobile" class="text-neutral-700 font-medium" data-i18n="nav.language">Language</label>
        <select id="language-selector-mobile" class="bg-transparent text-neutral-800 text-sm font-semibold focus:outline-none">
          <option value="en" data-i18n="nav.language.en">English</option>
          <option value="es" data-i18n="nav.language.es">Español</option>
        </select>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
