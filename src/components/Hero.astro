---
const phones = [
  {
    position: 'left',
    image: '/app_preview_2.jpeg',
    alt: 'RecipLab Search Feature',
    animation: 'scroll-slide-left',
    zIndex: 'z-10'
  },
  {
    position: 'center',
    image: '/app_preview_1.jpg',
    alt: 'RecipLab Main Interface',
    animation: 'scroll-scale-in',
    zIndex: 'z-30'
  },
  {
    position: 'right',
    image: '/app_preview_1.jpg',
    alt: 'RecipLab Recipe Details',
    animation: 'scroll-slide-right',
    zIndex: 'z-10'
  }
];



const icons = {
  camera: 'M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z M15 13a3 3 0 11-6 0 3 3 0 016 0z',
  edit: 'M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z',
  video: 'M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z'
