---
import '../styles/theme.css';
import '../styles/tailwind.css';
---
<!DOCTYPE html>
<html lang="en" class="bg-white text-gray-900">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#2563eb" />
    <title>RecipLab — AI Recipe Generator from Photos, Text & Clips</title>
    <meta name="description" content="Turn photos, text prompts, and short social media transcriptions into step‑by‑step recipes. Start free; upgrade to Pro." />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon.png" sizes="32x32" />
    <meta name="keywords" content="AI recipes, recipe generator, cook from photo, text recipes, video transcription recipes, RecipLab app" />
    <meta property="og:title" content="RecipLab — AI Recipe Generator" />
    <meta property="og:description" content="Create recipes from photos, text prompts, or short transcriptions." />
    <meta property="og:image" content="/media/app_preview_1.jpg" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="RecipLab — AI Recipe Generator" />
    <meta name="twitter:description" content="Turn photos, text, and short clips into step-by-step recipes." />
    <meta name="twitter:image" content="/media/app_preview_1.jpg" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "RecipLab",
      "applicationCategory": "LifestyleApplication",
      "operatingSystem": "iOS, Android",
      "description": "Generate recipes from food photos, text prompts, or short social media transcriptions."
    }
    </script>
  </head>
  <body class="min-h-screen antialiased">
    <div class="relative">
      <slot />
    </div>
  </body>
</html>