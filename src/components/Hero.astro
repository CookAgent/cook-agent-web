---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-primary-50 via-neutral-50 to-secondary-50 pt-16">
  <!-- Animated Background Elements with Parallax -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="parallax absolute top-20 left-10 w-72 h-72 bg-primary-300 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-float" data-speed="0.3"></div>
    <div class="parallax absolute top-40 right-10 w-72 h-72 bg-secondary-300 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-float" style="animation-delay: 1s;" data-speed="0.5"></div>
    <div class="parallax absolute -bottom-8 left-1/2 w-72 h-72 bg-primary-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-float" style="animation-delay: 2s;" data-speed="0.2"></div>
  </div>

  <div class="relative w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
    <!-- Tagline -->
    <div class="scroll-fade-in mb-6">
      <span class="inline-block px-4 py-2 bg-surface/80 backdrop-blur-sm rounded-full text-sm font-semibold text-primary-600 border border-primary-200 shadow-sm">
        Cook smarter with AI
      </span>
    </div>

    <!-- Main Heading -->
    <h1 class="text-5xl sm:text-6xl lg:text-7xl font-black mb-6 scroll-slide-up">
      <span class="block text-primary-600">
        AI recipes from
      </span>
      <span class="block mt-2 text-primary-600">
        photos, text, or clips
      </span>
    </h1>

    <!-- Subtitle -->
    <p class="text-xl sm:text-2xl text-neutral-700 max-w-3xl mx-auto mb-10 scroll-slide-up leading-relaxed">
      Turn ingredients, snapshots, or social media transcriptions into 
      <span class="font-semibold text-primary-600">step-by-step dishes</span>. 
      Start free and upgrade to Pro for higher limits.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16 stagger-children">
      <a href="#cta" class="group px-8 py-4 bg-gradient-to-r from-primary-500 to-primary-600 text-white rounded-full font-bold text-lg shadow-card hover:shadow-lg hover:scale-105 transition-all duration-300 flex items-center space-x-2">
        <span>Download App</span>
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      <a href="#features" class="px-8 py-4 bg-surface/80 backdrop-blur-sm text-neutral-800 rounded-full font-bold text-lg border-2 border-border hover:border-primary-500 hover:bg-surface transition-all duration-300 shadow-lg hover:shadow-card">
        See Features
      </a>
    </div>

    <!-- Hero Phone Mockup -->
    <div class="relative w-full mx-auto mt-8">
      <div class="relative h-[600px] md:h-[700px]">
        <div class="phone-stack-container relative h-full flex items-center justify-center">
          
          {phones.map((phone, index) => (
            <div 
              class={`phone-card phone-${phone.position} ${phone.animation} ${phone.zIndex} absolute`}
              data-phone={phone.position}
              style={`animation-delay: ${index * 0.2}s;`}
            >
              <div class={`relative w-[220px] md:w-[280px] h-[440px] md:h-[560px] bg-neutral-100 rounded-[2.5rem] p-2.5 border-[6px] border-neutral-200 transition-all duration-500 ${phone.position === 'center' ? 'shadow-2xl shadow-primary-500/20' : 'shadow-xl'}`}>
                
                <!-- Notch -->
                <div class="absolute top-0 left-1/2 -translate-x-1/2 w-20 h-6 bg-neutral-100 rounded-b-3xl z-10 flex items-start justify-center pt-1">
                  <div class="w-12 h-1 bg-neutral-300 rounded-full"></div>
                </div>
                
                <!-- Screen -->
                <div class="relative w-full h-full bg-white rounded-[2rem] overflow-hidden">
                  <img 
                    src={phone.image}
                    alt={phone.alt}
                    class="w-full h-full object-cover"
                    loading={phone.position === 'center' ? 'eager' : 'lazy'}
                  />
                  
                  <!-- Screen Overlay -->
                  <div class={`absolute inset-0 bg-gradient-to-t pointer-events-none ${phone.position === 'center' ? 'from-black/5 to-transparent' : 'from-black/10 via-transparent to-black/5'}`}></div>
                  
                  <!-- Shine Effect -->
                  <div class="absolute inset-0 bg-gradient-to-tr from-white/0 via-white/10 to-white/0 pointer-events-none"></div>
                </div>
                
                <!-- Physical Buttons -->
                {phone.position === 'center' && (
                  <>
                    <div class="absolute right-0 top-32 w-1 h-12 bg-neutral-300 rounded-l shadow-inner"></div>
                    <div class="absolute left-0 top-28 w-1 h-8 bg-neutral-300 rounded-r shadow-inner"></div>
                    <div class="absolute left-0 top-40 w-1 h-8 bg-neutral-300 rounded-r shadow-inner"></div>
                  </>
                )}
              </div>
            </div>
          ))}

          <!-- Floating UI Elements -->
          <div class="absolute -top-4 -left-4 lg:left-8 w-20 h-20 md:w-24 md:h-24 bg-gradient-to-br from-primary-400/30 to-secondary-400/30 rounded-3xl backdrop-blur-sm border border-primary-200 flex items-center justify-center animate-float shadow-lg">
            <svg class="w-10 h-10 md:w-12 md:h-12 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          
          <div class="absolute -bottom-4 -right-4 lg:right-8 w-16 h-16 md:w-20 md:h-20 bg-gradient-to-br from-secondary-400/30 to-primary-400/30 rounded-3xl backdrop-blur-sm border border-secondary-200 flex items-center justify-center animate-float shadow-lg" style="animation-delay: 1.5s;">
            <svg class="w-8 h-8 md:w-10 md:h-10 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Feature Cards Below Phone -->
  
    <!-- Trust Indicators -->
    <div class="mt-16 scroll-fade-in">
      <p class="text-sm text-neutral-600 mb-4">Trusted by home cooks worldwide</p>
      <div class="flex flex-wrap justify-center items-center gap-4 md:gap-8 text-neutral-400">
        <div class="flex items-center space-x-1">
          <svg class="w-5 h-5 text-warning-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span class="font-semibold text-neutral-700">4.9/5</span>
        </div>
        <span class="text-neutral-300 hidden sm:block">•</span>
        <span class="font-semibold text-neutral-700">10K+ Downloads</span>
        <span class="text-neutral-300 hidden sm:block">•</span>
        <span class="font-semibold text-neutral-700">50K+ Recipes Generated</span>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(3deg); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Phone Animations */
  .phone-left {
    transform: translateX(-140%) scale(0.85) rotate(-12deg);
    opacity: 0.7;
  }

  .phone-center {
    transform: translateX(0) scale(1);
    opacity: 1;
  }

  .phone-right {
    transform: translateX(140%) scale(0.85) rotate(12deg);
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .phone-left {
      transform: translateX(-110%) scale(0.75) rotate(-8deg);
    }
    .phone-right {
      transform: translateX(110%) scale(0.75) rotate(8deg);
    }
  }

  /* Scroll Animations */
  @keyframes slideInLeft {
    from {
      transform: translateX(-200%) scale(0.8) rotate(-15deg);
      opacity: 0;
    }
  }

  @keyframes slideInRight {
    from {
      transform: translateX(200%) scale(0.8) rotate(15deg);
      opacity: 0;
    }
  }

  @keyframes scaleIn {
    from {
      transform: translateX(0) scale(0.8);
      opacity: 0;
    }
  }

  .scroll-slide-left {
    animation: slideInLeft 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  .scroll-slide-right {
    animation: slideInRight 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  .scroll-scale-in {
    animation: scaleIn 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  /* Scroll animations */
  .scroll-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }

  .scroll-slide-up {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 0.8s ease-out forwards;
  }

  .stagger-children > * {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 0.8s ease-out forwards;
  }

  .stagger-children > *:nth-child(1) {
    animation-delay: 0.1s;
  }

  .stagger-children > *:nth-child(2) {
    animation-delay: 0.2s;
  }

  .stagger-children > *:nth-child(3) {
    animation-delay: 0.3s;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>